{
  "manifest_version": 3,
  "name": "AI Trading Assistant",
  "version": "1.0.0",
  "description": "AI-powered assistant for analyzing and interacting with trading websites",
  "permissions": [
    "activeTab",
    "storage",
    "sidePanel",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://tradingview.com/*",
    "https://*.tradingview.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://tradingview.com/*",
        "https://*.tradingview.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Open AI Trading Assistant",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "sidepanel.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}